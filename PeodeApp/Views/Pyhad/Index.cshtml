@model IEnumerable<PeodeApp.Models.Pyha>

@{
    ViewData["Title"] = "Pühad";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Lisa uus</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kuupaev)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kuupaev)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Muuta</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Detailid</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Kustuta</a>
            </td>
        </tr>
}
    </tbody>
</table>
